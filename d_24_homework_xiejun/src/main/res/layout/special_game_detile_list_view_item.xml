<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
<ImageView
    android:id="@+id/special_game_detile_list_view_img"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/special_game_detile_list_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型:"/>
            <TextView
                android:id="@+id/special_game_detile_list_view_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="大小:"/>
            <TextView
                android:id="@+id/special_game_detile_list_view_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
      <TextView
          android:id="@+id/special_game_detile_list_view_message"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true"/>
    </LinearLayout>
    <Button
        android:id="@+id/special_game_detile_download_btn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="下载"
        android:background="@color/colorPrimary"/>
</LinearLayout>