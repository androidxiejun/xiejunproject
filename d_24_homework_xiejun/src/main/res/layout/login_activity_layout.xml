<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/user_login_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/login_user"
    android:layout_marginTop="20dp"
    />
    <EditText
        android:id="@+id/input_user_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入ID/邮箱、手机号码"
        android:layout_alignBottom="@id/user_login_btn"
        android:layout_toRightOf="@id/user_login_btn"/>
    <ImageView
        android:id="@+id/user_password_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_user_name_et"
        android:layout_marginTop="20dp"
        android:src="@drawable/login_password"/>
    <EditText
        android:id="@+id/input_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_password_btn"
        android:layout_below="@id/input_user_name_et"
        android:layout_alignBottom="@id/user_password_btn"
        android:hint="请输入密码"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="立即登录"
        android:background="@color/colorPrimary"
        android:layout_below="@id/input_password_et"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>